<% include ../partials/header.ejs %>
<div clas="row">

	<% include ../partials/navigation.ejs %>

	<div class="col-sm-9 col-md-10 content">
		<h1>Users</h1>

		<a href="/users/add">New User</a>

		<form class="form-horizontal" method="get" >
			<fieldset>

				<!-- Select Basic -->
				<div class="form-group">
					<div class="col-md-10">
						<select id="type" name="type" class="form-control">
							<option value="Manager">Manager</option>
							<option value="Call Handler">Call Handler</option>
							<option value="Analyst">Analyst</option>
						</select>
					</div>
				</div>

				<!-- Button (Double) -->
				<div class="form-group">
					<div class="col-md-10">
						<button class="btn btn-success">Save</button>
						<a href="/incidents" class="btn btn-danger">Reset</a>
					</div>
				</div>

			</fieldset>
		</form>

		<table class="table table-striped">
			<thead>
				<tr>
					<th></th>
					<th>First Name</th>
					<th>Last Name</th>
					<th>Username</th>
					<th>Job Title</th>
					<th></th>
				</tr>
				<% for(var i=0; i < users.length; i++) { %>
						<tr>
							<td><img src="<%= users[i].avatar %>" class="img-circle" alt="Cinque Terre" width="50" height="50"></td>
							<td><%= users[i].firstname %></td>
							<td><%= users[i].lastname %></td>
							<td><%= users[i].username %></td>
							<td><%= users[i].jobtitle %></td>
							<td><a href="/users/edit?id=<%- users[i]._id %>">Edit</a> | <a href="/users/delete?id=<%- users[i]._id %>">Delete</a></td>
						</tr>
				<%}%>
			</thead>
		</table>
	</div>
</div>

<% include ../partials/footer.ejs %>