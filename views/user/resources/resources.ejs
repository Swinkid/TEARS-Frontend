<% include ../../partials/header.ejs %>
<div clas="row">

	<% include ../../partials/navigation.ejs %>

	<div class="col-sm-9 col-md-10 content">
		<h1>Resources</h1>
		<a href="/device/add">Add New Resource</a>

		<form class="form-horizontal" method="get" >
			<fieldset>

				<!-- Select Basic -->
				<div class="form-group">
					<div class="col-md-10">
						<select id="type" name="type" class="form-control">
							<option value="Traffic">Traffic Officer</option>
							<option value="Armed">Armed Response</option>
							<option value="Emergency">Emergency Response</option>
							<option value="General">General Response</option>
						</select>
					</div>
				</div>

				<!-- Button (Double) -->
				<div class="form-group">
					<div class="col-md-10">
						<button class="btn btn-success">Save</button>
						<a href="/resources" class="btn btn-danger">Reset</a>
					</div>
				</div>

			</fieldset>
		</form>

		<table class="table table-striped">
			<thead>
			<tr>
				<th>Device Number</th>
				<th>Callsign</th>
				<th>Type</th>
				<th>Status</th>
				<th></th>
			</tr>
			<% for(var i=0; i < resources.length; i++) { %>
			<tr>
				<td><%= resources[i].device %></td>
				<td><%= resources[i].callsign %></td>
				<td><%= resources[i].type %></td>
				<td><%= resources[i].status %></td>
				<td><a href="/device/edit?id=<%- resources[i]._id %>">Edit</a> | <a href="/device/delete?id=<%- resources[i]._id %>">Delete</a></td>
			</tr>
			<%}%>
			</thead>
		</table>
	</div>
</div>

<% include ../../partials/footer.ejs %>